{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "jsx": "react",
        "allowJs": true,
        "paths": {
            "*": [
                "node_modules/*",
                "server/types/*"
            ]
        }
    },
    "include": [
        "server/**/*",
        "client/core/src/models/**/*"
    ]
}